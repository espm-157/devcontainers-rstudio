{
  "image": "ghcr.io/rocker-org/devcontainer/geospatial:4",
  "customizations": {
    "vscode": {
      "settings": {
        "r.rterm.linux": "/usr/local/bin/radian",
        "r.bracketedPaste": true,
        "r.plot.useHttpgd": true,
        "[r]": {
          "editor.wordSeparators": "`~!@#%$^&*()-=+[{]}\\|;:'\",<>/?"
        }
      },
      "extensions": ["reditorsupport.r", "rdebugger.r-debugger"]
    }
  },
  "remoteUser": "rstudio"
}
